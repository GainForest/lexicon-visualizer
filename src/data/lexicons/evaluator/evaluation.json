{
  "lexicon": 1,
  "id": "app.gainforest.evaluator.evaluation",
  "description": "An evaluation record published by an evaluator in their own repo.",
  "defs": {
    "main": {
      "type": "record",
      "description": "A single evaluation produced by an evaluator service.",
      "key": "tid",
      "record": {
        "type": "object",
        "required": ["evaluationType", "createdAt"],
        "properties": {
          "subject": { "type": "ref", "ref": "app.gainforest.evaluator.defs#subjectRef", "description": "Single target record being evaluated." },
          "subjects": { "type": "array", "items": { "type": "ref", "ref": "app.gainforest.evaluator.defs#subjectRef" }, "maxLength": 100, "description": "Batch evaluation: multiple target records." },
          "evaluationType": { "type": "string", "maxGraphemes": 64, "description": "Identifier for the type of evaluation." },
          "result": { "type": "union", "description": "The typed evaluation result.", "refs": ["app.gainforest.evaluator.defs#speciesIdResult","app.gainforest.evaluator.defs#dataQualityResult","app.gainforest.evaluator.defs#verificationResult","app.gainforest.evaluator.defs#classificationResult","app.gainforest.evaluator.defs#measurementResult","app.gainforest.evaluator.defs#bioacousticsResult","app.gainforest.evaluator.defs#deforestationResult","app.gainforest.evaluator.defs#carbonEstimationResult"] },
          "confidence": { "type": "integer", "minimum": 0, "maximum": 1000, "description": "Overall confidence in this evaluation (0-1000)." },
          "method": { "type": "ref", "ref": "app.gainforest.evaluator.defs#methodInfo", "description": "Method/model provenance for this specific evaluation." },
          "neg": { "type": "boolean", "description": "If true, this is a negation/withdrawal of a previous evaluation." },
          "supersedes": { "type": "string", "format": "at-uri", "description": "AT-URI of a previous evaluation record that this one supersedes." },
          "dynamicProperties": { "type": "string", "maxGraphemes": 10000, "description": "Additional structured data as a JSON string." },
          "createdAt": { "type": "string", "format": "datetime", "description": "Timestamp of when this evaluation was produced." }
        }
      }
    }
  }
}
